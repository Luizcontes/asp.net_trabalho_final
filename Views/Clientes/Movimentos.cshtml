@model asp.net_trabalho_final.Models.Movimento
@* @model IEnumerable<asp.net_trabalho_final.Models.Movimento> *@

@{
    ViewData["Title"] = "Index";
}

<h1>Movimentos</h1>

<div class="col-md-4">
    <form asp-action="Movimento">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="form-group">
            <label asp-for="Valor" class="control-label"></label>
            <input asp-for="Valor" class="form-control" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Registar Movimento" class="btn btn-primary" />
        </div>
    </form>

</div>
